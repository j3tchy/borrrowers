<form {{action "save" on="submit"}}>
	<h2>{{errorMessage}}</h2>

	<fieldset>
		{{input type="text" value=model.first_name placeholder="First Name"}}
		{{input type="text" value=model.last_name placeholder="Last Name"}}
		{{input type="text" value=model.email placeholder="email"}}
		{{input type="text" value=model.twitter placeholder="twitter"}}
	</fieldset>
	<input type="submit" value="Submit" class="primary">
	<button {{action "cancel"}}>Cancel</button>
</form>